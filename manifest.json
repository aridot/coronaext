{
    "name": "Corona Ext",
    "version": "1.0",
    "description": "Compare Google Locations with Corona confirmed locations",
    "background": {
        "scripts": ["background.js", "hot-reload.js"],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "tabs",
        "cookies",
        "https://israelcoronamap.co.il/",
        "https://www.google.com/"
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/virus_16.png",
            "32": "images/virus_32.png",
            "48": "images/virus_48.png",
            "128": "images/virus_128.png"
        }
    },
    "icons": {
        "16": "images/virus_16.png",
        "32": "images/virus_32.png",
        "48": "images/virus_48.png",
        "128": "images/virus_128.png"
    },
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js  https://ssl.google-analytics.com; object-src 'self'",
    "default_locale": "en",
    "manifest_version": 2
}